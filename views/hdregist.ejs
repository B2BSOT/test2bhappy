      $(this).css({"background-Color":"yellow"}); 
      //selector의 아이디를 세팅  
    });
   
    $('.ui.form')
      .form({
        fields: {
          hdname: {
            identifier: 'hdname',
            rules: [
              {
                type   : 'empty',
                prompt : 'Please enter your name'
              }
            ]
          }
        }
      });  
    
});

