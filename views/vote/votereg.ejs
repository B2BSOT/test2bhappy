  var deadlineDt = '';
  var deadlineTime = '';
  var itemNum = 2;
  

 
  // 뒤로가기 버튼 -> 메인화면 이동
  function goMain(){
      location.href = '../happyday/hdmain';
  }
  
  //항목추가
  function addItemList(){
