<body>

<!-- Navigation -->
<% include ../partials/navigation.ejs %>

<div class="ui container">
  <form id="voteupForm" name="voteupForm" class="ui segment form" action="/vote_update" method="post">
    	<h3 class="ui left floated header" style="color:black"><%=session.user_name%>님의 투표 수정 화면입니다</h3>  
    	<div class="ui clearing divider">
	    </div>
	   	<div class="content">
	   	  
	   	  <!--수정불가능-->
		    <div class="field">
    			<div class="ui sub header">
    				 투표제목(*)
    			</div>
    			<input type="text" value="<%=data1.subject%>" id="vote_name" name="vote_name" maxlength="20" readonly="true" disabled="false" >
		    </div>
		    
		    
		    <!--수정가능-->
		    <div class="field">
				  <div class="ui sub header">
					   상세내용
				  </div>
				  <textarea id="vote_contents" style="width:100% ;height: 200px; resize:none" name="vote_contents" maxlength="500"><%=data1.comment%></textarea>
				</div>

        <!--수정불가능.-->
				<div class="field">
    			<div class="ui sub header">
    				 항목입력(*)    
    			</div>
    		
    			<% for (var i = 0; i < data2.length; i++) { %>
    			  <input type="text" value="<%=data2[i].item_name%>" name="vote_item" maxlength="20" readonly="true" disabled="false">
    			<% } %>
    			<div id="item_list"> </div>

        <!--수정불가능.-->
          <button type="button" class="small circular ui icon button" id="add_item" name="add_item" style="background-color:#ee5252; color:white" disabled>
    		    <i class="icon plus"></i>
    		  </button>항목추가
        </div>
				
				<!--투표자 존재시 수정불가능. 투표자 미존재시 수정가능-->
  			<div class="column">
  				<div class="ui sub header">
  					 마감날짜(*)
  				</div>
  				<div class="ui calendar" id="deadline_dt" readonly="true">
  					<div class="ui input left icon" style=" width: 100%;">
  						<i class="calendar icon"></i>
  						<% if(data1.voteCount == 0) { %>
  						  <input type="text" value="<%=data1.deadlinedtShow%>" style=" width: 100%;" id="vote_deadline_dt" name="vote_deadline_dt">
  						<% }else{ %>
  						  <input type="text" value="<%=data1.deadlinedtShow%>" style=" width: 100%;" id="vote_deadline_dt" name="vote_deadline_dt" readonly="true" disabled="false">
  						<% } %>
  						<input type="hidden" id="deadline_dt_DB" name="deadline_dt_DB" value="<%=data1.deadlinedtDB %>">
  					</div>
  				</div>
  				<!-- calendar -->
  			</div>
  			<div class="column">
  				<div class="ui sub header">
  					 마감시각(*)
  				</div>
  				<div class="ui calendar" id="deadline_time">
  					<div class="ui input left icon" style=" width: 100%;">
  						<i class="time icon"></i>
  						<% if(data1.voteCount == 0) { %>
  						  <input type="text" value="<%=data1.deadlinetimeShow%>" style=" width: 100%;" id="vote_deadline_time" name="vote_deadline_time">
  						<% }else{ %>
  						  <input type="text" value="<%=data1.deadlinetimeShow%>" style=" width: 100%;" id="vote_deadline_time" name="vote_deadline_time" readonly="true" disabled="false">
  						<% } %>
  						<input type="hidden" id="deadline_time_DB" name="deadline_time_DB" value="<%=data1.deadlinetimeDB %>">
  					</div>
  				</div>
  				<p class="p validation" id="deadlineTime_alert" style="color:red; visibility:hidden;">
  				</p>
  			<!--날짜합치기 히든-->
		      <input type="hidden" id="vote_deadline" name="vote_deadline">
  			</div>
  			

        <!--투표자 존재시 수정불가능. 투표자 미존재시 수정가능-->
				<div class="field">
  				<div class="ui sub header">
  					 참여범위(*)
  				</div>
  				
  				<% if(data1.voteCount == 0) { %>
  				  <div id="selectionDropdown" class="ui selection dropdown"  style=" width: 100%;">
      				<input id="parti_org_id" name="parti_org_id" type="hidden" value="">
      				
      				<i class="dropdown icon"></i>
      				<div class="default text" style="color: black">
      				  <%=data1.partiShow%>
      				</div>
      				<div class="menu">
      					<div class="item" data-value="Team">
      						 Team
      					</div>
      					<div class="item" data-value="SM">
      						 SM
      					</div>
      				</div>
    			  </div>
  				<% }else{ %>
  				  <div id="selectionDropdown" class="ui selection dropdown"  style=" width: 100%;" readonly="true" disabled="false">
  				    <input id="parti_org_id" name="parti_org_id" type="hidden" value="">
  				    <i class="dropdown icon" ></i>  

      				<div class="default text">
      				  <%=data1.partiShow%>
      				</div>
      			</div>
  				<% } %>  
    			<p></p>
    		</div>
    			
    		<!--투표자 존재시 수정불가능. 투표자 미존재시 수정가능-->
  			<div class="field">
  				<div class="ui sub header">
  					 옵션선택
  				</div>
  				<div class="ui two column grid">
  				  <div class="column">
          		<div class="ui toggle checkbox">
          		  <% if(data1.voteCount == 0) { %>
                  <input type="checkbox" id="multi_chk" name="multi_chk" <%=data1.multiYnShow%> >
                  <input type="hidden" id="multi_yn" name="multi_yn" >
                <% }else{ %>
                  <input type="checkbox" id="multi_chk" name="multi_chk" disabled <%=data1.multiYnShow%> >
                <% } %> 
                <label>복수 선택</label>
              </div>
            </div>
            <div class="column">
              <div class="ui toggle checkbox">
                <% if(data1.voteCount == 0) { %>
                  <input type="checkbox" id="secret_chk" name="secret_chk" <%=data1.secretYnShow%> >
                  <input type="hidden" id="secret_yn" name="secret_yn">
                <% }else{ %>
                  <input type="checkbox" id="secret_chk" name="secret_chk" disabled <%=data1.secretYnShow%> >
                <% } %> 
                <label>익명 투표</label>
              </div>
            </div>
          </div>
  				<div class="ui two column grid">
            <div class="column">
              <div class="ui toggle checkbox">
                <% if(data1.voteCount == 0) { %>
                  <input type="checkbox" id="add_item_chk" name="add_item_chk" <%=data1.addItemYnShow%>>
                  <input type="hidden" id="add_item_yn" name="add_item_yn">
                <% }else{ %>
                  <input type="checkbox" id="add_item_chk" name="add_item_chk" disabled <%=data1.addItemYnShow%>>
                <% } %> 
                <label>항목 추가</label>
              </div>
            </div>
            <div class="column">
              <div class="ui toggle checkbox">
                <!--수정불가능-->
                <input type="checkbox" id="noti_chk" name="noti_chk" disabled <%=data1.notiYnShow%>>
                <label>E-Mail발송</label>
              </div>
            </div>
          </div>
  	  	</div>
		
    		<div class="actions">
    		  <div class="ui two bottom attached buttons">
      		  <button class="ui submit button" id="submit" name="submit" style="background-color:#ee5252; color:white">수정</button>
      		  <div class="ui button" style="color:white; background:grey" onclick=javascript:goMain()>
      			 취소
      		  </div>
    		  </div>
    	  </div>

		  </div> <!-- content -->
    </form>
</div> <!-- ui container -->
</body>
</html>


